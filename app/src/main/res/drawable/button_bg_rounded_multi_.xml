<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is red color rectangle with green border. -->
    <item>
        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="380dp"
                android:bottomRightRadius="380dp"
                android:topLeftRadius="380dp"
                android:topRightRadius="380dp" />
            <solid android:color="@color/colorPrimary" />
            <padding
                android:left="0dp"
                android:right="10dp" />
            <size
                android:width="100dp"
                android:height="50dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="380dp"
                android:bottomRightRadius="380dp"
                android:topLeftRadius="380dp"
                android:topRightRadius="380dp" />
            <solid android:color="@color/colorAccent" />
            <stroke
                android:width="5dp"
                android:color="@color/colorPrimary" />
            <padding
                android:bottom="15dp"
                android:right="10dp" />
            <size
                android:width="100dp"
                android:height="50dp" />

        </shape>
    </item>

</layer-list>